{

	"$schema": "https://json.schemastore.org/tsconfig",
  "exclude": ["node_modules", "**/*/build", "**/*.test.ts", "**/*/node_modules"],
  "compilerOptions": {
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@lets-automate/core": ["./lib/core"]
    }
  }
}